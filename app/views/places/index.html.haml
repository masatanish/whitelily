- model_class = Place
.page-header
  %h1 白百合なお店一覧

.row-fluid
  = gmaps(:map_options => {:auto_adjust => true}, :markers => {:data => @json, :options => {:rich_marker => true}})

.row-fluid
  %table.table.table-striped
    %thead
      %tr
        %th 店名
        %th 住所
        %th 登録日
        %th 投稿者
        %th 
        - if can? :write, Place
          %th 編集
    %tbody
      - @places.each do |place|
        %tr
          %td= link_to place.name, place_path(place)
          %td= place.address
          %td= d(place.created_at)

          %td
            -unless place.user.nil?
              = place.user.screen_name 
          %td
            - unless place.user.nil? or place.user.screen_name.nil?
              = image_tag(twitter_icon_url(place.user), :size => '20x20')
          %td
            - if can? :write, Place
              = link_to t('.edit', :default => t("helpers.links.edit")), edit_place_path(place), :class => 'btn btn-mini'
              = link_to t('.destroy', :default => t("helpers.links.destroy")), place_path(place), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

  - if can? :create, Place
    = link_to t('.new', :default => t("helpers.links.new")), new_place_path, :class => 'btn btn-primary'
