- model_class = Place
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @place.name
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @place.address
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @place.description
%p
  %strong= model_class.human_attribute_name(:latitude) + ':'
  %br
  = @place.latitude
%p
  %strong= model_class.human_attribute_name(:longitude) + ':'
  %br
  = @place.longitude

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), places_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_place_path(@place), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), place_path(@place), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
